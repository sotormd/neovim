# ui enhancements related to visuals and animation
{
  config.vim.visuals = {
    nvim-web-devicons.enable = true; # file icons for ui components
    cinnamon-nvim.enable = true; # smooth scrolling animation
    fidget-nvim.enable = true; # show progress indicators for lsp tasks
    indent-blankline.enable = true; # visualize indentation guides

    cellular-automaton.enable = false; # disable fancy animations for performance
    nvim-scrollbar.enable = false; # disable minimal scrollbar showing current viewport
    highlight-undo.enable = false; # disable highlight changes when undoing
    nvim-cursorline.enable = false; # highlight current line for clarity
  };
}
